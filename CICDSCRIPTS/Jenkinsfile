pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run JMeter Test') {
            steps {
                sh '''
                export PATH=$PATH:/path/to/apache-jmeter/bin
                jmeter -n -t CICDSCRIPTS/Maple.jmx -l results.jtl -e -o results
                '''
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'results/**/*.*', fingerprint: true
            }
        }
    }
}
