pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run JMeter Test') {
            steps {
                dir('CICDSCRIPTS') {
                    bat 'jmeter -n -t Maple.jmx -l results1.jtl -e -o results1'
                }
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'CICDSCRIPTS/results1/**/*.*', fingerprint: true
            }
        }

        stage('Send Email') {
            steps {
                emailext (
                    subject: "Test Email",
                    body: "This is a test email from Jenkins",
                    to: "lbhupal@academian.com"
                )
            }
        }
    }
}
