pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run JMeter Test') {
            steps {
                // Navigate to workspace/CICDSCRIPTS and run JMeter
                dir('CICDSCRIPTS') {
                    bat 'jmeter -n -t Maple.jmx -l results1.jtl -e -o results1'
                }
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'CICDSCRIPTS/results/**/*.*', fingerprint: true
            }
        }

        stage('Send Email') {
            steps {
                emailext(
                    to: 'lbhupal@academian.com',
                    subject: "JMeter Test Results - Staging #${env.BUILD_NUMBER}",
                    body: "Test completed. View HTML report attached.",
                    attachLog: true,
                    attachmentsPattern: 'tests/results/**/*.html'
                )
            }
        }
    }
}
