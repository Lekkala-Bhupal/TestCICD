pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run JMeter Test') {
            steps {
                sh '/opt/apache-jmeter-5.5/bin/jmeter -n -t CICDSCRIPTS/Maple.jmx -l results.jtl -e -o results'
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'results/**/*.*', fingerprint: true
            }
        }
    }
}
