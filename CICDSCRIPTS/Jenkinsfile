pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run JMeter Test') {
            steps {
                dir('CICDSCRIPTS') {
                    bat 'jmeter -n -t Maple.jmx -l results.jtl -e -o results'
                }
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'CICDSCRIPTS/results/**/*.*', fingerprint: true
            }
        }

        stage('Send Email') {
            steps {
                script {
                    emailext(
                        subject: "JMeter Test Report - Build #${env.BUILD_NUMBER}",
                        body: """
                            <p>Hello,</p>
                            <p>The JMeter test completed successfully for <b>Build #${env.BUILD_NUMBER}</b>.</p>
                            <p><a href="${env.BUILD_URL}artifact/CICDSCRIPTS/results/index.html">View HTML Report</a></p>
                        """,
                        mimeType: 'text/html',
                        to: 'lbnaidu1995@gmail.com',
                        from: 'lbnaidu1995@gmail.com',
                        replyTo: 'lbnaidu1995@gmail.com',
                        attachmentsPattern: 'CICDSCRIPTS/results/index.html',
                        attachLog: true
                    )
                }
            }
        }
    }
}
