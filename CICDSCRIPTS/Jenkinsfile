pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run JMeter Test') {
            steps {
                dir('CICDSCRIPTS') {
                    bat 'jmeter -n -t Maple.jmx -l results1.jtl -e -o results1'
                }
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'CICDSCRIPTS/results1/**/*.*', fingerprint: true
            }
        }

        stage('Send Email') {
            steps {
                emailext(
                    subject: "JMeter Test Results - Build #${env.BUILD_NUMBER}",
                    body: """
                    <p>Hi Team,</p>
                    <p>The JMeter test has completed for build <b>#${env.BUILD_NUMBER}</b>.</p>
                    <p>View the test results in the attached HTML report.</p>
                    <p>Regards,<br/>Jenkins</p>
                    """,
                    mimeType: 'text/html',
                    to: 'lbhupal@academian.com',
                    attachLog: true,
                    attachmentsPattern: 'CICDSCRIPTS/results1/**/*.html'
                )
            }
        }
    }
}
